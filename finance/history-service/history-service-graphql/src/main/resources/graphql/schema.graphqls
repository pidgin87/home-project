type Query {
    getOperationList: [Operation]
}

type Mutation {
    createOperation(
        sourceProduct: String,
        sourceFund: String,
        sourceAmount: Float,
        sourceCurrency: String,

        destinationProduct: String,
        destinationFund: String,
        destinationAmount: Float,
        destinationCurrency: String,

        description: String
        createdDate: DateTime

    ): VoidResponse
}

type Operation {
    id: String
    description: String

    sourceProduct: Product
    sourceFund: Fund
    sourceAmount: Float
    sourceCurrency: Currency

    destinationProduct: Product
    destinationFund: Fund
    destinationAmount: Float
    destinationCurrency: Currency

    createdDate: DateTime
}

type Currency {
    id: String
    iso: ProductType
    name: String
    symbol: String
}

type Product {
    id: String
    name: String
    type: ProductType
}

type Fund {
    id: String
    name: String
}

enum ProductType {
    CARD,
    ACCOUNT,
    BROKER_ACCOUNT
}

type VoidResponse {
    result: Boolean
}

scalar DateTime